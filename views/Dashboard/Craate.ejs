<nav aria-label="breadcrumb">
    <ol style="list-style: none; display: flex;">
        <li class="breadcrumb-item" style="margin-right: 10px;"><a style="text-decoration: none;"
                href="/dashboard">Dashboard</a></li>
        <li class="active"><a style="text-decoration: none; color: green;" href="#">
                create note
            </a></li>
    </ol>
</nav>

<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row row-mb-1">
        <div class="col">
            <h1>
                <%= locals.name %>
            </h1>
        </div>
        <div class="col text-end">
            <a href="/Dashboard" class="btn btn-primary">Back</a>
        </div>
    </div>
    <form action="/dashboard/add" method="post" class="d-flex flex-column align-items-center mt-5"
        style="width: 80%; margin: 0 auto;">
        <div class="form-group mb-4" style="width: 100%;">
            <input type="text" id="title" name="title" required placeholder="title"
                class="form-control fw-bold border-0 fs-4 text-center">
        </div>
        <div class="form-group mb-4" style="width: 100%;">
            <textarea name="body" id="body" required class="form-control pt-5" rows="10"
                placeholder="Take a note......"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg" type="submit">Create</button>
        </div>
    </form>


</div>